<h1>Name:</h1>
<%= @attraction.name %>
<br></br>
<h2>Tickets Required:</h2>
<%= @attraction.tickets %>
<br></br>
<h2>Minimum Height:</h2>
<%= @attraction.min_height %>
<br></br>
<h2>Happiness Rating:</h2>
<%= @attraction.happiness_rating %>
<br></br>
<h2>Nausea Rating:</h2>
<%= @attraction.nausea_rating %>
<br></br>
<% if current_user.admin %>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
  <br></br>
<% end %>



<%= form_tag(rides_new_path, method: :post) do %>
  <%= hidden_field_tag :attraction_id, @attraction.id %>
  <%= submit_tag "Go on this ride" %>
<% end %>